{
    "compileOnSave": false,
    "compilerOptions": {
      "paths": { "*": ["types/*"] },
        "rootDir": "../",
        "baseUrl": "",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "importHelpers":true,
        "strict": true,
        "lib": [
            "es6",
            "dom"
        ],
        "mapRoot": "src",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/out-tsc",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jasmine",
            "core-js",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
